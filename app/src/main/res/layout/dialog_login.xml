<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="174dp"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:gravity="bottom|center_horizontal"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_msg"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:text=""
            android:textColor="#959595"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="28dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/ic_dotted_line" />


        <LinearLayout
            android:id="@+id/item_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/item_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_select_left"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#eaeaea" />

            <TextView
                android:id="@+id/item_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/text_select_right"
                android:gravity="center"
                android:textColor="#3385ff"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>